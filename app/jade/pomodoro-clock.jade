    body
        div(class="container-fluid")
            .row
                div(class="col-sm-1 col-md-2 col-lg-3")
                div(class="col-sm-10 col-md-8 col-lg-6")
                    h3(class="pomodoro") Pomodoro Clock
                    .row
                        div(class="col-sm-8 col-xs-12")
                            .row
                                div(class="setting-block col-xs-12")
                                    button(class="btn btn-default" id="subtractSessionMinute") -
                                    button(class="btn btn-default" id="addSessionMinute") +
                                    span(class="setting-tag") session: 
                                        span(id="sessionSetMinutesDisplay")
                            .row
                                div(class="setting-block col-xs-12")
                                    button(class="btn btn-default" id="subtractBreakMinute") -
                                    button(class="btn btn-default" id="addBreakMinute") +
                                    span(class="setting-tag") break: 
                                        span(id="breakSetMinutesDisplay")
                        div(class="col-sm-4 col-xs-12")
                            #stopStart start / stop
                    .row
                        #session-bar-container
                            div(id="session-bar" class=".col-sm-12")
                                #session-bar-indicator
                                    #session-bar-remainder-indicator
                                        span(id="sessionMinutesDisplay" style="margin-left: 10px;")  
                                        | :
                                        span(id="sessionSecondsDisplay") 
                    .row
                        #break-bar-container
                            div(id="break-bar" class=".col-sm-12")
                                #break-bar-indicator
                                    #break-bar-remainder-indicator
                                        span(id="breakMinutesDisplay" style="margin-left: 10px;")  
                                        | :
                                        span(id="breakSecondsDisplay") 
                div(class="col-sm-1 col-md-2 col-lg-3")

         <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        script(src="./bower_components/jquery/dist/jquery.js")
        //- script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        //- script(src="./bower_components/bootstrap/dist/js/bootstrap.js")
